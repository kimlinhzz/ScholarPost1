<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant1"
    android:orientation="vertical"


    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:padding="10dp"
    >

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/img_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/facebook"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScholarPost"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#fff"

        />

    <EditText
        android:padding="10dp"
        android:id="@+id/edittext_id1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/username_24dp"
        android:hint="UserName"
        android:textColorHint="#fff"
        android:layout_centerInParent="true"
        android:background="@drawable/rextangle"
        />

    <EditText
        android:id="@+id/edittext_id2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Password"
        android:textColorHint="#fff"
        android:layout_below="@id/edittext_id1"
        android:drawableLeft="@drawable/password_24dp"
        android:background="@drawable/rextangle"

        />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/bottom_id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_id2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box"
        android:text="Login"
        android:textColor="#fff"
        />
    <TextView

        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_below="@id/bottom_id1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Now"
        android:layout_below="@id/text_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        />
</RelativeLayout>

</LinearLayout>